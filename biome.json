{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/dist/**",
      "!**/.astro/**",
      "!**/node_modules/**",
      "!**/public/**",
      "!**/*.config.*",
      "!**/package-lock.json",
      "!**/bun.lock",
      "!**/playwright-report/**",
      "!**/test-results/**",
      "!**/test-build/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "includes": [
      "**/src/**/*.{js,jsx,ts,tsx,astro,json,jsonc}",
      "**/*.{js,jsx,ts,tsx,mjs,cjs}",
      "**/*.{js,jsx,ts,tsx,astro,json,jsonc}",
      "!**/.cache/**",
      "!**/node_modules/**",
      "!**/package.json",
      "!**/package-lock.json",
      "!**/public/**",
      "!**/dist/**",
      "!**/.astro/**"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "useAltText": "error",
        "useButtonType": "warn",
        "useValidAnchor": "error",
        "noSvgWithoutTitle": "off",
        "useGenericFontNames": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noUnknownFunction": "off"
      },
      "style": {
        "noNegationElse": "off",
        "useConst": "error",
        "useTemplate": "warn"
      },
      "suspicious": {
        "noDebugger": "error",
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn",
        "noConsole": { "level": "off", "options": { "allow": ["log"] } }
      },
      "performance": {
        "noDelete": "error"
      },
      "security": {
        "noBlankTarget": "error"
      }
    },
    "includes": [
      "**",
      "!**/.cache/**",
      "!**/node_modules/**",
      "!**/public/**",
      "!**/dist/**",
      "!**/.astro/**",
      "!**/*.config.*"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    },
    "globals": ["console", "process"]
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["**/src/pages/**/*.astro", "**/src/layouts/**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.jsx", "**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useButtonType": "error",
            "useKeyWithClickEvents": "warn"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          }
        }
      }
    },
    {
      "includes": ["**/*.config.*", "**/astro.config.*"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnknownFunction": "off"
          },
          "a11y": {
            "useGenericFontNames": "off"
          }
        }
      }
    }
  ]
}
