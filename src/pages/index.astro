---
import { getCollection } from 'astro:content';
import BlogCard from '../components/BlogCard.astro';
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';

// Get all blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// Advanced SEO keywords for maximum search visibility and ranking dominance
const keywords = [
  // Primary Identity & Name
  'Piyush Mehta',
  'Piyush Mehta Software Engineer',
  'Piyush Mehta Developer',
  'Piyush Mehta Canada',

  // Core Job Titles & Variations
  'Software Engineer',
  'Senior Software Engineer',
  'Full Stack Developer',
  'Full Stack Engineer',
  'Software Developer',
  'Web Developer',
  'Frontend Engineer',
  'Backend Engineer',
  'JavaScript Developer',
  'TypeScript Developer',
  'React Developer',
  'Node.js Developer',

  // Location-Based SEO (Canada Focus)
  'Software Engineer Canada',
  'Software Developer Canada',
  'Full Stack Developer Canada',
  'Software Engineer Toronto',
  'Software Engineer Vancouver',
  'Software Engineer Montreal',
  'Software Engineer Ottawa',
  'Software Engineer Calgary',
  'Tech Consultant Canada',
  'Canadian Software Engineer',
  'Canada Tech Expert',
  'Remote Software Engineer Canada',

  // Technology Expertise
  'React.js Expert',
  'JavaScript Expert',
  'TypeScript Specialist',
  'Node.js Developer',
  'Next.js Developer',
  'React Native Developer',
  'GraphQL Developer',
  'API Developer',
  'Cloud Developer',
  'AWS Developer',
  'Azure Developer',
  'DevOps Engineer',

  // Service-Based Keywords
  'Custom Software Development',
  'Web Application Development',
  'Enterprise Software Solutions',
  'Startup MVP Development',
  'Software Consulting',
  'Technical Architecture',
  'Code Review Services',
  'Performance Optimization',
  'Database Design',

  // Industry & Experience
  'Senior Developer 5+ Years',
  'Enterprise Software Engineer',
  'Startup CTO',
  'Technical Lead',
  'Software Architect',
  'System Design Expert',
  'Scalable Applications',
  'High Performance Software',
  'Modern Web Development',

  // Competitive SEO
  'Best Software Engineer Canada',
  'Top Developer Canada',
  'Expert Software Consultant',
  'Professional Software Development',
  'Reliable Software Engineer',
  'Experienced Developer',

  // Long-tail Keywords
  'hire software engineer canada',
  'freelance software developer canada',
  'custom web application development',
  'react developer for hire',
  'full stack developer portfolio',
  'software engineer portfolio canada',
  'technical consultant canada',
  'enterprise software development services',
