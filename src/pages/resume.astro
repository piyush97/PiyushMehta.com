<style>
  /* Hero Section Styles */
  .resume-hero-section {
    position: relative;
    min-height: 70vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
    background-color: var(--color-bg);
  }

  .resume-hero-bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
      var(--color-light-800) 1px,
      transparent 1px
    );
    background-size: 30px 30px;
    opacity: 0.3;
  }

  .resume-hero-bg-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 50% 50%,
      var(--color-light-800) 0%,
      var(--color-bg) 70%
    );
    opacity: 0.4;
  }

  /* Particle animations */
  .resume-hero-particle-field {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--color-accent);
    opacity: 0.5;
    animation: float 15s infinite ease-in-out;
  }

  .particle-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .particle-2 {
    top: 70%;
    left: 20%;
    animation-delay: 2s;
  }

  .particle-3 {
    top: 30%;
    left: 80%;
    animation-delay: 4s;
  }

  .particle-4 {
    top: 60%;
    left: 70%;
    animation-delay: 6s;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(20px, 15px);
    }
    50% {
      transform: translate(0, 30px);
    }
    75% {
      transform: translate(-20px, 15px);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  /* Floating elements */
  .resume-hero-floating-elements {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .resume-floating-element {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: var(--color-light-800);
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    animation: float 15s infinite ease-in-out;
  }

  .resume-element-1 {
    top: 20%;
    left: 15%;
    animation-delay: 1s;
  }

  .resume-element-2 {
    top: 70%;
    left: 80%;
    animation-delay: 3s;
  }

  .resume-element-3 {
    top: 30%;
    left: 70%;
    animation-delay: 5s;
  }

  .floating-icon {
    font-size: 24px;
  }

  .floating-pulse {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: transparent;
    border: 2px solid var(--color-accent);
    animation: pulse 3s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.4);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 0.8;
    }
  }

  /* Hero content */
  .resume-hero-intro {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    font-size: 1.2rem;
    color: var(--color-accent);
  }

  .intro-icon {
    margin-right: 0.5rem;
    font-size: 1.4rem;
  }

  .resume-hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    position: relative;
    display: inline-block;
  }

  .title-primary {
    color: var(--color-text-primary);
  }

  .title-accent {
    color: var(--color-accent);
    margin-left: 0.5rem;
  }

  .title-underline {
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: var(--color-accent);
    transform: scaleX(0);
    transform-origin: left;
    animation: slide-in 1s forwards ease-out;
  }

  @keyframes slide-in {
    to {
      transform: scaleX(1);
    }
  }

  .resume-hero-teaser {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    color: var(--color-text-secondary);
  }

  .highlight {
    color: var(--color-accent);
    font-weight: 600;
  }

  /* Button styles */
  .btn-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--color-accent);
    color: var(--color-light-900);
    font-weight: 600;
    border-radius: 0.375rem;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 204, 104, 0.3);
  }

  .btn-secondary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: transparent;
    border: 2px solid var(--color-accent);
    color: var(--color-accent);
    font-weight: 600;
    border-radius: 0.375rem;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-secondary:hover {
    background-color: rgba(255, 204, 104, 0.1);
    transform: translateY(-2px);
  }

  /* Resume content styles */
