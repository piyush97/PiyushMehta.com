    }

    /* Hover Effects for Service Cards */
    .space-y-3:hover {
      transform: translateY(-4px);
      transition: transform 0.3s ease;
    }

    /* Loading Animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
