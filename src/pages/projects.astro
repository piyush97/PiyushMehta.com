    }

    /* Stats Section Animation */
    .text-center:hover .text-3xl,
    .text-center:hover .text-4xl {
      transform: scale(1.1);
      transition: transform 0.3s ease;
    }

    /* Projects Grid Enhancements */
    .projects-grid {
      position: relative;
    }

