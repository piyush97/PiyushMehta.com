<style>
  /* Enhanced Videos Hero Section */
  .videos-hero-section {
    min-height: 80vh;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    background: linear-gradient(
      135deg,
      var(--color-bg) 0%,
      var(--color-light-950) 50%,
      var(--color-bg) 100%
    );
  }

  /* Animated background elements */
  .videos-hero-bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(
        circle at 25% 25%,
        var(--color-accent) 2px,
        transparent 2px
      ),
      radial-gradient(
        circle at 75% 75%,
        var(--color-accent) 1px,
        transparent 1px
      );
    background-size:
      50px 50px,
      30px 30px;
    background-position:
      0 0,
      15px 15px;
    opacity: 0.06;
    animation: patternMove 20s linear infinite;
  }

  .videos-hero-bg-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(
        ellipse at 20% 30%,
        var(--color-accent) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 80% 70%,
        var(--color-accent) 0%,
        transparent 50%
      );
    opacity: 0.04;
    animation: gradientPulse 10s ease-in-out infinite;
  }

  .videos-hero-particle-field {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    background: var(--color-accent);
    border-radius: 50%;
    opacity: 0.5;
  }

  .particle-1 {
    width: 3px;
    height: 3px;
    top: 20%;
    left: 15%;
    animation: particleFloat1 6s ease-in-out infinite;
  }

  .particle-2 {
    width: 2px;
    height: 2px;
    top: 40%;
    right: 20%;
    animation: particleFloat2 8s ease-in-out infinite;
  }

  .particle-3 {
    width: 4px;
    height: 4px;
    bottom: 30%;
    left: 25%;
    animation: particleFloat3 7s ease-in-out infinite;
  }

  .particle-4 {
    width: 3px;
    height: 3px;
    top: 70%;
    right: 30%;
    animation: particleFloat4 9s ease-in-out infinite;
  }

  .videos-hero-floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .videos-floating-element {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .floating-icon {
    font-size: 2rem;
    opacity: 0.6;
    animation: iconFloat 3s ease-in-out infinite;
    filter: drop-shadow(0 0 8px rgba(var(--color-accent-rgb), 0.2));
  }

  .floating-pulse {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px solid var(--color-accent);
    border-radius: 50%;
    opacity: 0.2;
    animation: pulse 2s ease-in-out infinite;
  }

  .videos-element-1 {
    width: 70px;
    height: 70px;
    top: 20%;
    left: 10%;
    animation: elementFloat1 8s ease-in-out infinite;
  }

  .videos-element-2 {
