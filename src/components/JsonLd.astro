---
// src/components/JsonLd.astro - Component for adding structured JSON-LD data to pages
// This component injects JSON-LD structured data for better SEO
import type { JsonLdData } from '../types/schema';

export interface Props {
  data: JsonLdData;
}

const { data } = Astro.props;
---

<script type="application/ld+json" set:html={JSON.stringify(data)} />
