---
import ThemeSelector from './ThemeSelector.astro';
const pathname = Astro.url.pathname;

// Navigation items with icons and descriptions
const navItems = [
  { 
    href: '/', 
    label: 'Home', 
    icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
    description: 'Welcome page'
  },
  { 
    href: '/about/', 
    label: 'About', 
    icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z',
    description: 'Learn about me'
  },
  { 
    href: '/blog/', 
    label: 'Blog', 
    icon: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z',
    description: 'Technical articles'
  },
  { 
    href: '/projects/', 
    label: 'Projects', 
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4',
    description: 'My work showcase'
  },
  { 
    href: '/uses/', 
    label: 'Uses', 
    icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
    description: 'Tools & setup'
  },
  { 
    href: '/contact-me/', 
    label: 'Contact', 
    icon: 'M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    description: 'Get in touch'
  },
  { 
    href: '/resume/', 
    label: 'Resume', 
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    description: 'Professional CV'
  }
];

// Check if current page is active
const isActive = (href: string) => {
  if (href === '/' && pathname === '/') return true;
  if (href !== '/' && pathname.startsWith(href)) return true;
  return false;
};
---

<nav class="fixed top-0 left-0 right-0 z-50 navbar-enhanced backdrop-blur-navbar">
  <!-- Enhanced background with gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-navbar/50 to-transparent"></div>
  
  <div class="relative flex items-center justify-between py-3 px-4 md:py-4 container-base">
    <!-- Enhanced Logo/Brand with animation -->
    <a
      href="/"
      class="group flex items-center space-x-3 text-xl font-bold transition-all duration-300 text-accent hover:text-accent/80 focus:outline-none focus:ring-2 focus:ring-accent/50 rounded-lg p-1"
      aria-label="Piyush Mehta - Home"
    >
      <div class="relative">
        <div class="absolute inset-0 bg-accent/20 rounded-full blur-lg transition-all duration-300 group-hover:bg-accent/30 group-hover:scale-110"></div>
        <div class="relative w-10 h-10 bg-gradient-to-br from-accent to-accent/80 rounded-full flex items-center justify-center text-sm font-bold text-darker shadow-lg">
          PM
        </div>
      </div>
      <span class="hidden sm:block text-lg font-semibold tracking-tight">Piyush Mehta</span>
    </a>

    <!-- Desktop Navigation with enhanced effects -->
    <div class="items-center hidden space-x-4 lg:flex">
      <nav aria-label="Main navigation" class="flex items-center">
        <ul class="flex items-center space-x-1">
          {navItems.map((item) => (
            <li>
              <a 
                href={item.href} 
                class={`navbar-link group relative flex items-center space-x-2 px-3 py-2 text-sm font-medium rounded-lg transition-all duration-200 ${isActive(item.href) ? 'active bg-accent/10 text-accent' : 'text-text-primary hover:text-accent hover:bg-surface-100/10'}`}
                title={item.description}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                <!-- Icon -->
                <svg class="w-4 h-4 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={item.icon}></path>
                </svg>
                
                <!-- Label -->
                <span class="hidden xl:block">{item.label}</span>
                
                {/* <!-- Active indicator -->
                {isActive(item.href) && (
                  <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-1 h-1 bg-accent rounded-full"></div>
                )} */}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Desktop Actions Section -->
      <div class="flex items-center space-x-2">
        <!-- Search Button -->
        <button
          id="search-toggle"
          class="p-2 transition-all duration-200 rounded-lg hover:bg-surface-100/10 hover:text-accent focus:outline-none focus:ring-2 focus:ring-accent/50"
          aria-label="Search content"
          title="Search articles and content"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>

        <!-- Social Links -->
        <div class="hidden xl:flex items-center space-x-1">
          <a
            href="https://github.com/piyush97"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 transition-all duration-200 rounded-lg hover:bg-surface-100/10 hover:text-accent group focus:outline-none focus:ring-2 focus:ring-accent/50"
            aria-label="GitHub Profile"
            title="Follow me on GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
            </svg>
          </a>
          
          <a
            href="https://linkedin.com/in/piyush24"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 transition-all duration-200 rounded-lg hover:bg-surface-100/10 hover:text-accent group focus:outline-none focus:ring-2 focus:ring-accent/50"
            aria-label="LinkedIn Profile"
            title="Connect on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Actions (Search + Theme) - Always Visible -->
    <div class="flex items-center space-x-2">
      <!-- Search Button (mobile) -->
      <button
        id="mobile-search-toggle"
        class="p-2.5 transition-all duration-200 rounded-lg hover:bg-surface-100/10 hover:text-accent focus:outline-none focus:ring-2 focus:ring-accent/50 lg:hidden"
        aria-label="Search content"
        title="Search"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>

      <!-- Theme Selector (always visible) -->
      <div class="relative">
        <ThemeSelector />
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="relative p-2.5 transition-all duration-200 rounded-lg hover:bg-surface-100/10 focus:outline-none focus:ring-2 focus:ring-accent/50 lg:hidden"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <div class="mobile-menu-icon">
          <span class="mobile-menu-line"></span>
          <span class="mobile-menu-line"></span>
          <span class="mobile-menu-line"></span>
        </div>
      </button>
    </div>

  </div>

  <!-- Enhanced Mobile Menu -->
  <div 
    id="mobile-menu" 
    class="mobile-menu-enhanced fixed inset-x-0 top-[73px] z-40 transition-all duration-300 transform -translate-y-full opacity-0 invisible"
    aria-hidden="true"
  >
    <!-- Mobile menu backdrop -->
    <div class="absolute inset-0 bg-darker/95 backdrop-blur-lg"></div>
    
    <!-- Mobile menu content -->
    <div class="relative px-4 py-6 bg-gradient-to-b from-darker via-darker/98 to-darker/95 max-h-[calc(100vh-73px)] overflow-y-auto">
      <nav aria-label="Mobile navigation">
        <ul class="space-y-1">
          {navItems.map((item, index) => (
            <li 
              class="mobile-nav-item" 
              style={`animation-delay: ${index * 50}ms`}
            >
              <a 
                href={item.href} 
                class={`mobile-nav-link block p-4 rounded-xl transition-all duration-200 ${isActive(item.href) ? 'active bg-accent/20 text-accent border border-accent/30' : 'hover:bg-surface-100/10 focus:bg-surface-100/10'}`}
                title={item.description}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <!-- Icon -->
                    <div class={`p-2 rounded-lg ${isActive(item.href) ? 'bg-accent/20' : 'bg-surface-100/10'}`}>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d={item.icon}></path>
                      </svg>
                    </div>
                    <div>
                      <span class="font-medium text-base">{item.label}</span>
                      <p class="text-sm text-text-secondary mt-0.5">{item.description}</p>
                    </div>
                  </div>
                  
                  {isActive(item.href) && (
                    <div class="w-2 h-2 bg-accent rounded-full animate-pulse"></div>
                  )}
                </div>
              </a>
            </li>
          ))}
        </ul>

        <!-- Mobile social links -->
        <div class="pt-6 mt-6 border-t border-surface-100/20">
          <p class="mb-4 text-sm font-medium text-text-secondary">Connect with me</p>
          <div class="grid grid-cols-2 gap-3">
            <a
              href="https://github.com/piyush97"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-3 p-3 transition-all duration-200 rounded-lg bg-surface-100/10 hover:bg-accent/20 group"
              aria-label="GitHub Profile"
            >
              <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
              <span class="text-sm font-medium">GitHub</span>
            </a>
            
            <a
              href="https://linkedin.com/in/piyush24"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-3 p-3 transition-all duration-200 rounded-lg bg-surface-100/10 hover:bg-accent/20 group"
              aria-label="LinkedIn Profile"
            >
              <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
              <span class="text-sm font-medium">LinkedIn</span>
            </a>
          </div>
        </div>
      </nav>
    </div>
  </div>
</nav>
