          'TypeScript',
          'JavaScript',
          'DevOps',
          'Cloud Computing',
          'Software Architecture',
          'Web Development',
          'Frontend Development',
          'Software Engineering',
        ],
      })}
    />
  )
}

<!-- FAQPage Schema for Homepage -->
