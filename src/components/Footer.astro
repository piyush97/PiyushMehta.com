<style>
  /* Footer Styles */
  .footer-section {
    background: var(--color-light-950);
    margin-top: auto;
  }

  .footer-column-title {
    @apply text-sm font-semibold text-text-primary mb-4 uppercase tracking-wider;
  }

  .footer-links {
    @apply space-y-3;
  }

  .footer-link {
    @apply text-text-secondary hover:text-accent transition-colors duration-base block;
  }

  .social-link {
    @apply flex items-center justify-center w-10 h-10 bg-light-800 text-text-secondary hover:text-accent hover:bg-light-700 rounded-lg transition-all duration-base;
  }

  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--color-accent-rgb), 0.2);
  }

  .newsletter-input:focus {
    box-shadow: 0 0 0 3px rgba(var(--color-accent-rgb), 0.1);
  }

  .footer-bottom {
    background: rgba(var(--color-light-950), 0.8);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-section {
      padding-top: 3rem;
      padding-bottom: 2rem;
    }

    .footer-meta {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-meta > * {
      width: 100%;
    }
  }

  /* Animation for social links */
  .social-link svg {
    transition: transform 0.2s ease;
  }

  .social-link:hover svg {
    transform: scale(1.1);
  }

  /* Newsletter form enhancement */
  .newsletter-form button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(var(--color-accent-rgb), 0.3);
  }
</style>

<script>
  // Newsletter form handling
  document.addEventListener('DOMContentLoaded', () => {
    const newsletterForm = document.querySelector('.newsletter-form');

    newsletterForm?.addEventListener('submit', (e) => {
      e.preventDefault();

      const email = (e.target as HTMLFormElement).querySelector(
        'input[type="email"]'
      ) as HTMLInputElement;
      const button = (e.target as HTMLFormElement).querySelector(
        'button'
      ) as HTMLButtonElement;

      if (email && button) {
        const originalText = button.textContent;
        button.textContent = 'Subscribing...';
        button.disabled = true;

        // Simulate subscription process
        setTimeout(() => {
          button.textContent = 'Subscribed!';
          email.value = '';

          setTimeout(() => {
            button.textContent = originalText;
            button.disabled = false;
          }, 2000);
        }, 1000);
      }
    });
  });
</script>
