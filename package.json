    "verify-rss": "node scripts/verify-rss.mjs",
    "test-seo": "node test-seo-files.mjs",
    "test-rss": "node test-rss-output.mjs",
    "debug-rss": "node debug-rss-feed.mjs",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "deploy": "wrangler pages deploy dist",
    "deploy:preview": "wrangler pages deploy dist --compatibility-date=2025-03-25",
    "cf:login": "wrangler auth login",
    "cf:whoami": "wrangler auth whoami"
