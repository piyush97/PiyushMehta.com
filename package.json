    "lint:fix": "biome lint --write src/",
    "format": "biome format --write .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "ci": "biome ci .",
    "enhance-sitemap": "node generate-enhanced-sitemap.mjs",
