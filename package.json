  "scripts": {
    "dev": "wrangler types && astro dev",
    "start": "wrangler types && astro dev",
    "build": "wrangler types && astro build && npm run post-build",
    "post-build": "echo '_worker.js' > dist/.assetsignore && echo '_routes.json' >> dist/.assetsignore",
